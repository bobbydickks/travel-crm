# Environment configurations for different databases

# SQLite (Development)
# DATABASE_URL=sqlite:///./travel_crm.db

# PostgreSQL (Production/Docker)
DATABASE_URL=postgresql://postgres:postgres@db:5432/travel_crm

# SQL Server (Enterprise)
# DATABASE_URL=mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# Other settings remain the same
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=travel_crm

SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=travel-crm-files
MINIO_SECURE=false

ADMIN_PASSWORD=admin123
ENVIRONMENT=production
